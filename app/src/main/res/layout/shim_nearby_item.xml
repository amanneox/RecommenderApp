<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/background_review"
    android:layout_marginTop="6dp"
    android:layout_height="wrap_content">

    <View xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:layout_marginTop="8dp"
        android:layout_below="@id/custombar"
        android:layout_width="match_parent"
        android:background="@color/placeholder_bg"
        android:layout_height="@dimen/nearby_img_h">
    </View>
    <View
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:padding="12dp"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/neosansmedium"
        android:textSize="20sp"
        android:layout_above="@id/headline"
        />
    <View
        android:id="@+id/headline"
        android:layout_width="100dp"
        android:layout_above="@id/data"
        android:layout_height="5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="12dp"
        android:background="@color/colorPrimary"
        android:visibility="visible" />


    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/data"
        android:paddingBottom="@dimen/row_padding_vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/row_padding_vertical"
        android:layout_below="@id/pager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/genre"
            android:layout_width="@dimen/placeholder_text_width"
            android:fontFamily="@font/neosansregular"
            android:layout_height="8dp"
            android:textColor="@color/colorBlack"
            android:background="@color/placeholder_bg"
            android:text="@string/app_name"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/data2"
        android:paddingBottom="@dimen/row_padding_vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/row_padding_vertical"
        android:layout_below="@id/pager"
        android:layout_toEndOf="@id/data"
        android:gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/ratingbar"
            android:layout_width="wrap_content"
            android:background="@color/placeholder_bg"
            android:layout_height="8dp" />
    </LinearLayout>
</RelativeLayout>