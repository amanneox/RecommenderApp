<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginTop="8dp"
    android:id="@+id/container"
    android:background="@drawable/background_review"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/thumb"
        android:layout_margin="16dp"
        android:layout_width="@dimen/search_img_w"
        android:layout_height="@dimen/search_img_h" />
    <LinearLayout
        android:id="@+id/layout1"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/thumb"
        >
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="18sp"
            android:fontFamily="@font/neosansbold"
            android:textColor="@color/colorBlack"

            />
        <TextView
            android:id="@+id/genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:fontFamily="@font/neosanslight"
            />
        <RatingBar
            android:id="@+id/ratingbar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:progressTint="@color/colorPrimary"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:fontFamily="@font/neosansmedium"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/layout1"
        android:layout_width="match_parent"
        android:layout_toEndOf="@id/thumb"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="location"
            android:layout_weight="1"
            android:fontFamily="@font/neosanslight"
            android:gravity="start"
            />
        <TextView
            android:id="@+id/distance"
            android:text="distance"
            android:gravity="end"
            android:layout_gravity="end"
            android:fontFamily="@font/neosanslight"
            android:layout_width="wrap_content"
            android:layout_marginEnd="6dp"
            android:layout_height="wrap_content"
            />
    </LinearLayout>


</RelativeLayout>